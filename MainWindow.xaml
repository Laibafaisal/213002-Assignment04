<Window x:Class="_213002_A4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_213002_A4"
        mc:Ignorable="d"
        Title="Person Info" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10" >
            <TextBlock Text="First Name:" />
            <TextBox Text="{Binding FirstName, Mode=OneWay}" Margin="0,0,0,10" />

            <TextBlock Text="Last Name:" />
            <TextBox Text="{Binding LastName, Mode=OneWay}" Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</Window>
